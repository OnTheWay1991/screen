<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/vm_dimen_48">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/vm_dimen_24"
        android:layout_height="@dimen/vm_dimen_24"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/vm_dimen_8"
        android:src="@drawable/ic_done_24dp"
        android:tint="@color/vm_green_87"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_icon"
        android:ellipsize="end"
        android:padding="@dimen/vm_padding_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/vm_dimen_1"
        android:layout_alignParentBottom="true"
        android:background="@color/vm_gray_12" />
</RelativeLayout>